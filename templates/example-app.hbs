<div class="example-module-app">
  <header class="app-header">
    <h2>{{title}}</h2>
    {{#if isGM}}
    <span class="gm-badge">GM</span>
    {{/if}}
  </header>

  <section class="content-section">
    <h3>Welcome!</h3>
    <p>This is an example Foundry VTT module demonstrating best practices.</p>
  </section>

  <div class="message-box">
    <i class="fas fa-quote-left"></i>
    {{message}}
  </div>

  <div class="info-panel">
    <div class="info-item">
      <span class="label">Role</span>
      <span class="value">{{#if isGM}}Game Master{{else}}Player{{/if}}</span>
    </div>
    <div class="info-item">
      <span class="label">Last Updated</span>
      <span class="value">{{timestamp}}</span>
    </div>
  </div>

  <div class="button-group">
    <button 
      type="button" 
      class="btn btn-primary" 
      data-action="refresh"
      tabindex="0"
      aria-label="Refresh the application"
    >
      <i class="fas fa-sync-alt"></i>
      Refresh
    </button>
    <button 
      type="button" 
      class="btn btn-secondary" 
      data-action="close"
      tabindex="0"
      aria-label="Close the application"
    >
      <i class="fas fa-times"></i>
      Close
    </button>
  </div>
</div>

