<div class="fax-bank-admin">
  {{! Header }}
  <header class="admin-header">
    <h2>üè¶ FAX-BANK Administration</h2>
    <p class="system-info">
      Game System: <strong>{{gameSystem}}</strong>
      {{#if isSupported}}
        <span class="supported">‚úÖ Supported</span>
      {{else}}
        <span class="unsupported">‚ö†Ô∏è Limited Support</span>
      {{/if}}
    </p>
  </header>

  {{! Create Bank NPC Section }}
  <section class="admin-section create-bank">
    <h3>üìå Designate Bank NPC</h3>
    <p class="hint">Select an actor (NPC) to become a bank. Players can interact with this NPC to access the bank.</p>
    
    <div class="form-row">
      <label for="bank-actor-select">Actor:</label>
      <select id="bank-actor-select" class="bank-actor-select">
        <option value="">-- Select Actor --</option>
        {{#each availableActors}}
          <option value="{{this.id}}">{{this.name}} ({{this.type}})</option>
        {{/each}}
      </select>
    </div>
    
    <div class="form-row">
      <label for="bank-name-input">Bank Name:</label>
      <input type="text" id="bank-name-input" placeholder="e.g., Royal Treasury, Merchant Guild Bank" />
    </div>
    
    <button type="button" class="create-bank-btn">
      <i class="fas fa-plus"></i> Create Bank NPC
    </button>
  </section>

  {{! Current Bank NPCs }}
  <section class="admin-section bank-npcs">
    <h3>üèõÔ∏è Active Bank NPCs</h3>
    
    {{#if bankNPCs.length}}
      <ul class="bank-npc-list">
        {{#each bankNPCs}}
          <li class="bank-npc-item">
            <img src="{{this.actorImg}}" alt="{{this.actorName}}" class="actor-img" />
            <div class="bank-info">
              <span class="actor-name">{{this.actorName}}</span>
              <span class="bank-name">{{this.bankName}}</span>
            </div>
            <button type="button" class="remove-bank-btn" data-actor-id="{{this.actorId}}" title="Remove bank status">
              <i class="fas fa-trash"></i>
            </button>
          </li>
        {{/each}}
      </ul>
    {{else}}
      <p class="empty-state">No bank NPCs configured. Create one above!</p>
    {{/if}}
  </section>

  {{! Help Section }}
  <section class="admin-section help">
    <h3>‚ÑπÔ∏è How It Works</h3>
    <ul class="help-list">
      <li><strong>Bank NPCs:</strong> Designate any actor as a bank. Players double-click or interact with the NPC to open the bank.</li>
      <li><strong>Currency:</strong> Uses your game system's native currency ({{gameSystem}}). All transactions affect the actual character sheet.</li>
      <li><strong>Transfers:</strong> Players can transfer money to other characters. GM processes all transfers.</li>
      <li><strong>Security:</strong> Only GMs can add currency. Players can only spend what they have.</li>
    </ul>
  </section>

  {{! Footer }}
  <footer class="admin-footer">
    <button type="button" class="refresh-btn">
      <i class="fas fa-sync"></i> Refresh
    </button>
  </footer>
</div>
