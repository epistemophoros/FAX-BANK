<div class="fax-bank bank-dialog-content">
  {{!-- Header --}}
  <div class="bank-header">
    <img src="{{actorImg}}" alt="{{actorName}}" class="actor-portrait">
    <div class="actor-info">
      <h2>{{actorName}}</h2>
      <p class="subtitle">Banking Services</p>
    </div>
  </div>

  {{!-- Personal Wallet --}}
  <section class="wallet-section">
    <h3><i class="fas fa-wallet"></i> Personal Wallet</h3>
    <div class="wallet-display">
      {{#each walletCurrencies}}
      <div class="currency-item">
        <span class="currency-amount">{{this.amount}}</span>
        <span class="currency-name">{{this.name}}</span>
        <span class="currency-key">{{this.key}}</span>
      </div>
      {{/each}}
    </div>
    <p class="wallet-note">This is currency on your character sheet</p>
  </section>

  <hr>

  {{!-- Bank Accounts --}}
  <section class="accounts-section">
    <h3><i class="fas fa-university"></i> Bank Accounts</h3>
    
    {{#if hasAccounts}}
    <div class="accounts-list">
      {{#each accounts}}
      <div class="account-item" data-account-id="{{this.id}}">
        <div class="account-header">
          <strong>{{this.bankName}}</strong>
          <span class="account-balance">{{this.balanceDisplay}}</span>
        </div>
        
        <div class="account-actions">
          <div class="action-row">
            <label>Deposit</label>
            <select class="deposit-currency">
              {{#each ../walletCurrencies}}
              <option value="{{this.key}}">{{this.key}}</option>
              {{/each}}
            </select>
            <input type="number" class="deposit-amount" placeholder="0" min="1">
            <button type="button" class="deposit-btn" data-account-id="{{this.id}}">
              <i class="fas fa-arrow-down"></i> Deposit
            </button>
          </div>
          
          <div class="action-row">
            <label>Withdraw</label>
            <select class="withdraw-currency">
              {{#each ../walletCurrencies}}
              <option value="{{this.key}}">{{this.key}}</option>
              {{/each}}
            </select>
            <input type="number" class="withdraw-amount" placeholder="0" min="1">
            <button type="button" class="withdraw-btn" data-account-id="{{this.id}}">
              <i class="fas fa-arrow-up"></i> Withdraw
            </button>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
    {{else}}
    <p class="no-accounts">
      You don't have any bank accounts yet.<br>
      Open an account below to start saving!
    </p>
    {{/if}}
  </section>

  <hr>

  {{!-- Open New Account --}}
  <section class="new-account-section">
    <h3><i class="fas fa-plus-circle"></i> Open New Account</h3>
    {{#if availableBanks.length}}
    <div class="new-account-form">
      <select id="new-account-bank">
        <option value="">Select a bank...</option>
        {{#each availableBanks}}
        <option value="{{this.id}}">{{this.name}} ({{this.economyName}})</option>
        {{/each}}
      </select>
      <button type="button" class="open-account-btn">
        <i class="fas fa-plus"></i> Open Account
      </button>
    </div>
    {{else}}
    <p class="no-banks">
      No banks available.<br>
      Ask your GM to set up a bank!
    </p>
    {{/if}}
  </section>

  {{!-- Footer --}}
  <div class="dialog-footer">
    <button type="button" class="refresh-btn">
      <i class="fas fa-sync"></i> Refresh
    </button>
  </div>
</div>
