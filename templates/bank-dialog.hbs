<div class="fax-bank-dialog">
  {{! Header with actor info }}
  <header class="bank-header">
    <img src="{{actorImg}}" alt="{{actorName}}" class="actor-portrait" />
    <div class="actor-info">
      <h2>{{actorName}}</h2>
      <p class="current-wealth">{{currencyDisplay}}</p>
    </div>
  </header>

  {{#unless isSupported}}
    <div class="warning-banner">
      ‚ö†Ô∏è Game system "{{gameSystem}}" has limited support. Currency may not sync correctly.
    </div>
  {{/unless}}

  {{! Current Currency }}
  <section class="bank-section currency-overview">
    <h3>üí∞ Current Currency</h3>
    <div class="currency-grid">
      {{#each currencies}}
        <div class="currency-item">
          <span class="currency-amount">{{this.amount}}</span>
          <span class="currency-name">{{this.name}}</span>
        </div>
      {{/each}}
    </div>
  </section>

  {{! Add Currency (GM Only) }}
  {{#if isGM}}
  <section class="bank-section add-currency">
    <h3>‚ûï Add Currency (GM)</h3>
    <div class="form-row inline">
      <select id="add-currency-type">
        {{#each currencies}}
          <option value="{{this.key}}">{{this.name}}</option>
        {{/each}}
      </select>
      <input type="number" id="add-currency-amount" min="1" placeholder="Amount" />
      <button type="button" class="add-currency-btn">Add</button>
    </div>
  </section>
  {{/if}}

  {{! Spend Currency }}
  <section class="bank-section remove-currency">
    <h3>‚ûñ Spend Currency</h3>
    <div class="form-row inline">
      <select id="remove-currency-type">
        {{#each currencies}}
          <option value="{{this.key}}">{{this.name}}</option>
        {{/each}}
      </select>
      <input type="number" id="remove-currency-amount" min="1" placeholder="Amount" />
      <button type="button" class="remove-currency-btn">Spend</button>
    </div>
  </section>

  {{! Transfer Currency }}
  <section class="bank-section transfer-currency">
    <h3>‚ÜîÔ∏è Transfer to Another Character</h3>
    <div class="form-row">
      <label for="transfer-target">Recipient:</label>
      <select id="transfer-target">
        <option value="">-- Select Character --</option>
        {{#each otherActors}}
          <option value="{{this.id}}">{{this.name}}</option>
        {{/each}}
      </select>
    </div>
    <div class="form-row inline">
      <select id="transfer-currency-type">
        {{#each currencies}}
          <option value="{{this.key}}">{{this.name}}</option>
        {{/each}}
      </select>
      <input type="number" id="transfer-amount" min="1" placeholder="Amount" />
      <button type="button" class="transfer-btn">Transfer</button>
    </div>
  </section>

  {{! Footer }}
  <footer class="bank-footer">
    <button type="button" class="refresh-btn">
      <i class="fas fa-sync"></i> Refresh
    </button>
  </footer>
</div>
